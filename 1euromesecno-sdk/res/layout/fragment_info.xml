<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="rs.hakaton.euromesecno.sdk.InfoActivity$PlaceholderFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical" >

            <include layout="@layout/info_header" />

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_marginLeft="@dimen/info_left_right_margin"
                android:layout_marginRight="@dimen/info_left_right_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:text="Potrebno: " />

                    <TextView
                        android:id="@+id/info_amount"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_problem_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:text="Boluje od: " />

                    <TextView
                        android:id="@+id/info_problem"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_sms_number_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:text="SMS Broj: " />

                    <TextView
                        android:id="@+id/info_sms_number"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/info_sms_text_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_text_medium"                        
                        android:text=" tekst: " />

                    <TextView
                        android:id="@+id/info_sms_text"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <include android:id="@+id/separator_info" layout="@layout/line" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/info_text"
                android:textSize="@dimen/info_text_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include android:id="@+id/separator_desc" layout="@layout/line" />

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/info_domestic_account_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:text="DINARSKI RAČUN" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_domestic_account"
                        android:layout_width="wrap_content"
                        android:text="racun"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_domestic_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_domestic_account_holder_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NA IME: " />

                    <TextView
                        android:id="@+id/info_domestic_account_holder"
                        android:layout_width="wrap_content"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/info_foreign_bank_account_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:text="DEVIZNI RAČUN" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_foreign_bank_account"
                        android:layout_width="wrap_content"
                        android:text="racun dev"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_foreign_bank_swift_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SWIFT: " />

                    <TextView
                        android:id="@+id/info_foreign_bank_swift"
                        android:layout_width="wrap_content"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/info_foreign_bank_iban_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IBAN: " />

                    <TextView
                        android:id="@+id/info_foreign_bank_iban"
                        android:layout_width="wrap_content"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <include android:id="@+id/separator_bank" layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/info_contact_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_text_medium"
                        android:text="KONTAKT" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_email_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: " />

                    <TextView
                        android:id="@+id/info_email"
                        android:layout_width="wrap_content"
                        android:textColor="@color/info_color_text_2"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_phone_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefon: " />

                    <TextView
                        android:id="@+id/info_phone"
                        android:textColor="@color/info_color_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_site_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website: " />

                    <TextView
                        android:id="@+id/info_site"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113ca9"
                        android:text="THE LINK" />
                </LinearLayout>
                <Button
                android:id="@+id/info__send_sms_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_selector"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:layout_marginTop="10dp"
                android:text="DONIRAJ SMS"
                android:textColor="@color/list_item_bg"
                android:textSize="@dimen/button_item_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>