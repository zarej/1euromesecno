<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_box_shapes"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/main_list_item__image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="@dimen/white_box_margin"
                android:src="@drawable/ic_launcher" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:background="@color/app_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/list_item_bg"
            android:orientation="vertical" >
            
            

            <TextView
                android:id="@+id/main_list_item__name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:textAllCaps="true"
                android:text="Medium Text\ndsdsds"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/button_item_text_size" />
<!-- <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="1dp" /> -->

            <Button
                android:id="@+id/main_list_item__send_sms_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_shapes"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="DONIRAJ SMS"
                android:textColor="@color/list_item_bg"
                android:textSize="@dimen/button_item_text_size" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>